<Page 
    x:Class="tutu2.Alarm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:tutu2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <!-- Title Text -->
        <TextBlock Text="Set Alarm Time" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="10"/>

        <!-- TextBox for Alarm Name -->
        <TextBox Name="AlarmNameTextBox" PlaceholderText="Enter Alarm Name" HorizontalAlignment="Center" VerticalAlignment="Top" Width="300" Margin="0,50,0,0"/>

        <!-- TimePicker for selecting alarm time -->
        <TimePicker Name="AlarmTimePicker" HorizontalAlignment="Center" VerticalAlignment="Top" Width="300" Margin="0,120,0,0"/>

        <!-- Set Alarm Button -->
        <Button Content="Set Alarm" HorizontalAlignment="Center" VerticalAlignment="Top" Width="100" Margin="0,180,0,0" Click="SetAlarmButton_Click"/>

        <!-- ListBox to display the list of alarms -->
        <ListBox Name="AlarmsListBox" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="300" Height="300" Margin="0,0,0,20"/>
    </Grid>
</Page>
